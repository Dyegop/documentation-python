{% extends 'base.jinja2' %}

{% block content %}
<h1>Create post</h1>

<!-- Create an html form: <form action="URL" method="HTTP_METHOD">
	 	-`action` attribute specifies the URL that processes the form submission
		-`method` attribute specifies the HTTP method to submit a form
			-Using GET sends data as query string parameters
			-Using POST sends data hidden inside the form payload
		-We don't need to specify the `action` if we're loading the form and receiving the data on the same route
		-If we create and recieve data in different routes, <form action="/post/create" method="POST"> -->
<form method="POST">
	<!-- A div is just a block element; makes other elements appear below this one instead of side by side -->
	<div>
		<!-- A label is some text associated with an element -->
		<label for="title">Title</label>
		<!-- A "text" input is a normal text field. -->
		<input type="text" name="title"/>
	</div>
	<div>
		<label for="content">Content</label>
		<!-- A textarea is another type of input which can span multiple lines of text. -->
		<textarea name="content"> </textarea>
	</div>
	<div>
		<!-- `submit` input will send the data in the form to the `action` when pressed -->
		<input type="submit"/>
	</div>
</form>
{% endblock %}















